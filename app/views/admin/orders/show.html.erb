<h1 class="mb-4 text-center text-3xl font-semibold">Order Details</h1>

<%= card do %>

  <div class="mt-2 border-b border-gray-200 pb-5 text-sm">
    <dl class="flex">
      <dt class="text-gray-500">Order number&nbsp;</dt>
      <dd class="font-medium text-gray-900"><%= @order.order_number %></dd>
      <dt>
        <span class="sr-only">Date</span>
        <span class="mx-2 text-gray-400" aria-hidden="true">&middot;</span>
      </dt>
      <dd class="font-medium text-gray-900">
        <time datetime="<%= @order.created_at.strftime("%Y-%m-%d") %>"><%= @order.created_at.strftime("%B %d, %Y") %></time>
      </dd>
    </dl>

    <div class="mt-2">
      <div class="text-sm">
        <%= @order.orderer.name %>
      </div>
      <div class="text-sm">
        <%= @order.orderer.email %>
      </div>
      <div class="text-sm">
        <%= @order.orderer.phone %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-center text-xl">Tickets</h2>
    <div class="w-full rounded border border-gray-200 bg-zinc-50 pt-2 text-gray-500">
      <table class="w-full">
        <thead class="border-b border-gray-200 bg-zinc-50 uppercase text-gray-700">
        <tr class="text-xs">
          <th class="px-6 py-3">Section</th>
          <th class="px-6 py-3">Quantity</th>
          <th class="px-6 py-3">Seat Number</th>
          <th class="px-6 py-3">Table Number</th>
          <th class="px-6 py-3">Fees</th>
          <th class="px-6 py-3">Ticket Price</th>
          <th class="px-6 py-3">Total Paid</th>
        </tr>
        </thead>
        <tbody>
        <% @order.tickets.group_by(&:show).each do |show, tickets| %>
          <tr class="border-b bg-white text-sm last:border-none hover:bg-zinc-50">
            <td colspan="8" class="bg-gray-50 p-2 pl-4 text-black text-md">
              <%= show.artist.name %> - <%= show.show_date.to_fs(:date) %>
            </td>
          </tr>
          <% tickets.each do |ticket| %>
            <tr class="border-b bg-white text-sm last:border-none hover:bg-zinc-50">
              <td class="px-6 py-3 text-center"><%= ticket.show_section.name %></td>
              <td class="px-6 py-3 text-right"><%= ticket.quantity %></td>
              <td class="px-6 py-3 text-right"><%= ticket.seat_number if ticket.is_a?(Order::Tickets::ReservedSeating) %></td>
              <td class="px-6 py-3 text-right"><%= ticket.table_number if ticket.is_a?(Order::Tickets::ReservedSeating) %></td>
              <td class="px-6 py-3 text-right"><%= number_to_currency(ticket.total_fees) %></td>
              <td class="px-6 py-3 text-right"><%= number_to_currency(ticket.deposit_payment_method? ? ticket.deposit_amount : ticket.ticket_price) %></td>
              <td class="px-6 py-3 text-right"><%= number_to_currency(ticket.total_price) %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-center text-xl">Merch</h2>
    <div class="w-full rounded border border-gray-200 bg-zinc-50 pt-2 text-gray-500">
      <table class="w-full">
        <thead class="border-b border-gray-200 bg-zinc-50 uppercase text-gray-700">
        <tr class="text-xs">
          <th class="px-6 py-3">Item</th>
          <th class="px-6 py-3">Quantity</th>
          <th class="px-6 py-3">Price</th>
          <th class="px-6 py-3">Total</th>
          <th class="px-6 py-3">Option</th>
        </thead>
        <tbody>
        <% @order.merch.each do |order_merch| %>
          <tr class="border-b bg-white text-sm last:border-none hover:bg-zinc-50">
            <td class="px-6 py-3 text-center"><%= order_merch.merch.name %></td>
            <td class="px-6 py-3 text-right"><%= order_merch.quantity %></td>
            <td class="px-6 py-3 text-right"><%= number_to_currency(order_merch.unit_price) %></td>
            <td class="px-6 py-3 text-right"><%= number_to_currency(order_merch.total_price) %></td>
            <td class="px-6 py-3 text-right"><%= order_merch.option %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Billing -->
  <div class="mt-12">
    <h2 class="sr-only">Billing Summary</h2>

    <div class="rounded-lg bg-gray-50 px-6 py-6 lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-0 lg:py-8">
      <dl class="grid grid-cols-1 gap-6 text-sm sm:grid-cols-2 md:gap-x-8 lg:col-span-5 lg:pl-8">
        <% if @order.merch.any? %>
          <div>
            <dt class="font-medium text-gray-900">Shipping address</dt>
            <dd class="mt-3 text-gray-500">
              <span class="block"><%= @order.shipping_address.first_name %> <%= @order.shipping_address.last_name %></span>
              <span class="block"><%= @order.shipping_address.address_1 %> <%= @order.shipping_address.address_2 %></span>
              <span class="block"><%= @order.shipping_address.city %>
                , <%= @order.shipping_address.state %> <%= @order.shipping_address.zip_code %></span>
            </dd>
          </div>
        <% end %>
        <div class="<%= "col-span-2" unless @order.merch.any? %>">
          <dt class="font-medium text-gray-900">Payment information</dt>
          <dd class="mt-3 flex">
            <div>
              <%= image_tag "/card_brands/#{@order.payment.card_brand}.png", class: "h-6 w-auto" %>
              <p class="sr-only">Visa</p>
            </div>
            <div class="ml-4">
              <p class="text-gray-900">Ending with <%= @order.payment.card_last_4 %></p>
              <p class="text-gray-600">Expires <%= @order.payment.card_exp_month %>
                /<%= @order.payment.card_exp_year %></p>
              <p class="text-gray-600">Stripe ID: <%= @order.payment.stripe_payment_intent_id %></p>
            </div>
          </dd>
        </div>
      </dl>

      <dl class="mt-8 text-sm divide-y divide-gray-200 lg:col-span-7 lg:mt-0 lg:pr-8">
        <div class="flex items-center justify-between pb-4">
          <dt class="text-gray-600">Subtotal</dt>
          <dd class="font-medium text-gray-900"><%= number_to_currency(@order.order_total) %></dd>
        </div>
        <div class="flex items-center justify-between py-4">
          <dt class="text-gray-600">Shipping</dt>
          <dd class="font-medium text-gray-900"><%= number_to_currency(@order.shipping_fees) %></dd>
        </div>
        <div class="flex items-center justify-between py-4">
          <dt class="text-gray-600">Tax</dt>
          <dd class="font-medium text-gray-900">TODO</dd>
        </div>
        <div class="flex items-center justify-between pt-4">
          <dt class="font-medium text-gray-900">Order total</dt>
          <dd class="font-medium text-amber-600"><%= number_to_currency(@order.order_total) %></dd>
        </div>
      </dl>
    </div>
  </div>
<% end %>
