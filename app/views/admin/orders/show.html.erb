<div id="<%= dom_id @order %>" class="max-w-5xl card">
  <!--  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">-->
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">Order Details</h1>

  <div class="mt-2 border-b border-gray-200 pb-5 text-sm">
    <dl class="flex">
      <dt class="text-gray-500">Order number&nbsp;</dt>
      <dd class="font-medium text-gray-900"><%= @order.order_number %></dd>
      <dt>
        <span class="sr-only">Date</span>
        <span class="mx-2 text-gray-400" aria-hidden="true">&middot;</span>
      </dt>
      <dd class="font-medium text-gray-900">
        <time datetime="<%= @order.created_at.strftime("%Y-%m-%d") %>"><%= @order.created_at.strftime("%B %d, %Y") %></time>
      </dd>
    </dl>

    <div class="mt-2">
      <div class="text-sm">
        <%= @order.orderer.full_name %>
      </div>
      <div class="text-sm">
        <%= @order.orderer.email %>
      </div>
      <div class="text-sm">
        <%= @order.orderer.phone %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <%= table_tag do %>
      <%= thead_tag do %>
        <tr>
          <%= th_tag do %>
            Section
          <% end %>
          <%= th_tag do %>
            Quantity
          <% end %>
          <%= th_tag do %>
            Seat Number
          <% end %>
          <%= th_tag do %>
            Table Number
          <% end %>
          <%= th_tag do %>
            Fees
          <% end %>
          <%= th_tag do %>
            Ticket Price
          <% end %>
          <%= th_tag do %>
            Total Paid
          <% end %>
        </tr>
      <% end %>
      <tbody>
      <% @order.shows.each do |show| %>
        <%= tr_for_tbody_tag do %>
          <%= td_tag colspan: 8, class: "text-md font-weight-bold bg-gray-50" do %>
            <%= show.artist.name %>
          <% end %>
        <% end %>
        <% show.tickets.each do |ticket| %>
          <%= tr_for_tbody_tag do %>
            <%= td_tag do %>
              <%= ticket.show_section.name %>
            <% end %>
            <%= td_tag do %>
              <%= ticket.quantity %>
            <% end %>
            <%= td_tag do %>
              <%= ticket.seat_number %>
            <% end %>
            <%= td_tag do %>
              <%= ticket.table_number %>
            <% end %>
            <%= td_tag do %>
              <%= number_to_currency(ticket.total_fees) %>
            <% end %>
            <%= td_tag do %>
              <%= number_to_currency(ticket.deposit? ? ticket.deposit_amount : ticket.ticket_price) %>
            <% end %>
            <%= td_tag do %>
              <%= number_to_currency(ticket.total_price) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      </tbody>
    <% end %>
  </div>

  <!-- Billing -->
  <div class="mt-24">
    <h2 class="sr-only">Billing Summary</h2>

    <div class="rounded-lg bg-gray-50 px-6 py-6 lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-0 lg:py-8">
      <dl class="grid grid-cols-1 gap-6 text-sm sm:grid-cols-2 md:gap-x-8 lg:col-span-5 lg:pl-8">
        <% if @order.merch.any? %>
          <div>
            <dt class="font-medium text-gray-900">Shipping address</dt>
            <dd class="mt-3 text-gray-500">
              <span class="block"><%= order.shipping_address.first_name %> <%= order.shipping_address.last_name %></span>
              <span class="block"><%= order.shipping_address.address_1 %> <%= order.shipping_address.address_2 %></span>
              <span class="block"><%= order.shipping_address.city %>
                , <%= order.shipping_address.state %> <%= order.shipping_address.zip_code %></span>
            </dd>
          </div>
        <% end %>
        <div class="<%= "col-span-2" unless @order.merch.any? %>">
          <dt class="font-medium text-gray-900">Payment information</dt>
          <dd class="mt-3 flex">
            <div>
              <%= image_tag "/card_brands/#{@order.payment.card_brand}.png", class: "h-6 w-auto" %>
              <p class="sr-only">Visa</p>
            </div>
            <div class="ml-4">
              <p class="text-gray-900">Ending with <%= @order.payment.card_last_4 %></p>
              <p class="text-gray-600">Expires <%= @order.payment.card_exp_month %>
                /<%= @order.payment.card_exp_year %></p>
              <p class="text-gray-600">Stripe ID: <%= @order.payment.stripe_payment_intent_id %></p>
            </div>
          </dd>
        </div>
      </dl>

      <dl class="mt-8 divide-y divide-gray-200 text-sm lg:col-span-7 lg:mt-0 lg:pr-8">
        <div class="flex items-center justify-between pb-4">
          <dt class="text-gray-600">Subtotal</dt>
          <dd class="font-medium text-gray-900"><%= number_to_currency(@order.order_total) %></dd>
        </div>
        <div class="flex items-center justify-between py-4">
          <dt class="text-gray-600">Shipping</dt>
          <dd class="font-medium text-gray-900"><%= number_to_currency(@order.shipping_fees) %></dd>
        </div>
        <div class="flex items-center justify-between py-4">
          <dt class="text-gray-600">Tax</dt>
          <dd class="font-medium text-gray-900">TODO</dd>
        </div>
        <div class="flex items-center justify-between pt-4">
          <dt class="font-medium text-gray-900">Order total</dt>
          <dd class="font-medium text-indigo-600"><%= number_to_currency(@order.order_total) %></dd>
        </div>
      </dl>
    </div>
  </div>
  <!--  </div>-->
</div>
