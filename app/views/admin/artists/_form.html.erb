<%= form_with(model: [:admin, artist]) do |form| %>
  <%= turbo_frame_tag "admin_artist_errors" do %>
    <%= render "shared/error_messages", { model: artist } %>
  <% end %>

  <div class="mt-6">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control-text", tabindex: 1, autofocus: true %>
  </div>

  <div class="mt-6">
    <%= form.label :url, class: "form-label" %>
    <%= form.text_field :url, class: "form-control-text", tabindex: 2 %>
  </div>

  <div class="mt-6">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_area :bio, class: "form-control-text", tabindex: 3 %>
  </div>

  <div class="mt-6">
    <label for="artist-image-upload" class="form-label">Image</label>
    <%= render "shared/drag_and_drop_file_field", { form: form, attribute: :image } %>
  </div>

  <div class="mt-10 flex items-center justify-end">
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
