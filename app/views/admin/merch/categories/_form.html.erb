<%= form_with(model: [:admin, merch_category]) do |form| %>
  <%= render "shared/error_messages", { model: merch_category } %>

  <div class="mt-6">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div class="mt-10 flex items-center justify-end">
    <%= form.submit %>
  </div>
<% end %>
