<%= tr_for_tbody_tag id: dom_id(merch, "admin"),
                     data: { admin__merch_target: "merch", id: merch.id, active: merch.active },
                     class: "merch #{'hidden' if !show_off_sale && merch.inactive?}" do %>
  <%= td_tag do %>
    <%= link_to merch.name, edit_admin_merch_path(merch), class: "text-amber-500 hover:underline hover:text-amber-600 font-medium" %>
  <% end %>
  <%= td_tag do %>
    <%= merch.categories.map(&:name).join(", ").truncate(30) %>
  <% end %>
  <%= td_tag do %>
    <%= svg_check if merch.active? %>
  <% end %>
  <%= td_tag do %>
    <%= render "shared/dropdown", { id: dom_id(merch, :admin) } do %>
      <%= dropdown_link_to "Take off sale",
                           [:admin, merch],
                           data: { turbo_method: "delete", turbo: true },
                           class: "block px-4 py-2 hover:bg-gray-100 text-sm text-red-500 hover:text-red-700" if merch.active? %>
      <%= dropdown_link_to "Put on sale", admin_merch_on_sale_path(merch), data: { turbo_method: "post", turbo: true } unless merch.active? %>
    <% end %>
  <% end %>
<% end %>
