<circle 
  r="7" 
  fill="blue" 
  data-controller="admin--seating-chart-form--seat"
  data-admin--seating-chart-form--seat-x-value="<%= seat.x || 50 %>" 
  data-admin--seating-chart-form--seat-y-value="<%= seat.y || 50 %>" 
  data-admin--seating-chart-form--seat-seat-number-value="<%= seat.seat_number %>" 
  data-admin--seating-chart-form--seat-table-number-value="<%= seat.table_number %>" 
  <% if seat.persisted? %>
    data-admin--seating-chart-form--seat-id-value="<%= seat.id %>"
  <% end %>
  data-admin--seating-chart-form--seat-section-id-value="<%= seat.section_id %>"
  data-action="click->admin--seating-chart-form#openModal"
  data-admin--seating-chart-form-target="seat">
</circle>
