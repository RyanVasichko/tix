<circle 
  r="7" 
  fill="blue" 
  data-controller="seat"
  data-seat-x-value="<%= seat.x || 50 %>" 
  data-seat-y-value="<%= seat.y || 50 %>" 
  data-seat-seat-number-value="<%= seat.seat_number %>" 
  data-seat-table-number-value="<%= seat.table_number %>" 
  <% if seat.persisted? %>
    data-seat-id-value="<%= seat.id %>"
  <% end %>
  data-seat-section-id-value="<%= seat.section_id %>"
  data-action="click->seating-chart#openModal"
  data-seating-chart-target="seat">
</circle>
