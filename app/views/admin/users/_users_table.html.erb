<%= table_tag do %>
  <%= thead_tag do %>
    <tr>
      <%= th_tag do %>
        Name
      <% end %>

      <%= th_tag do %>
        Email
      <% end %>

      <%= th_tag do %>
        Phone
      <% end %>

      <%= th_tag do %>
      <% end %>
    </tr>
  <% end %>
  <tbody>
  <% users.each do |user| %>
    <%= tr_for_tbody_tag id: dom_id(user, :admin) do %>
      <%= td_tag do %>
        <%= link_to user.full_name, user.is_a?(User::Customer) ? edit_admin_customer_path(user) : edit_admin_admin_path(user), class: "text-amber-600", data: { turbo_frame: "application_modal" } %>
      <% end %>
      <%= td_tag do %>
        <%= user.email %>
      <% end %>
      <%= td_tag do %>
        <%= user.phone %>
      <% end %>
      <%= td_tag do %>
        <%= render "shared/dropdown", { id: dom_id(user, :admin) } do %>
          <%= yield(user) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  </tbody>
<% end %>
