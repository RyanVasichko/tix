<%= card do %>
  <%= render "admin/users/tabs" %>

  <%= data_table collection: @users,
                 pagy: @pagy,
                 namespace: :admin,
                 new_record_button: false,
                 keyword_search_url: admin_customers_path,
                 infer_include_deactivated_search_param: false do |table| %>
    <% table.column :name do |user| %>
      <%= link_to user.name,
                  edit_admin_customer_path(user),
                  data: { turbo_stream: "" },
                  class: "link primary font-medium" %>
    <% end %>
    <% table.column :email %>
    <% table.column :phone %>
    <% table.column "", sortable: false, cell_class: "text-right" do |user| %>
      <%= link_to "View Orders", "#", class: "link primary text-sm" %>
      |
      <%= link_to "Delete",
                  admin_customer_path(user),
                  data: { turbo_method: "delete" },
                  class: "link danger text-sm" %>
    <% end %>
  <% end %>
<% end %>
