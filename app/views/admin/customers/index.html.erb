<%= card do %>
  <%= render "admin/users/tabs" %>

  <%= data_table collection: @users,
                 pagy: @pagy,
                 namespace: :admin,
                 new_record_modal: true,
                 new_record_url: new_admin_customer_path,
                 keyword_search_url: admin_customers_path,
                 infer_include_deactivated_search_param: false do |table| %>
    <% table.column :name do |user| %>
      <%= primary_link_to user.name,
                          edit_admin_customer_path(user),
                          data: { turbo_stream: "" },
                          class: "font-medium" %>
    <% end %>
    <% table.column :email %>
    <% table.column :phone %>
    <% table.column "", sortable: false, cell_class: "text-right" do |user| %>
      <%= primary_link_to "View Orders", "#", class: "text-sm" %>
      |
      <%= danger_link_to "Delete", admin_customer_path(user), data: { turbo_method: "delete" }, class: "text-sm" %>
    <% end %>
  <% end %>
<% end %>
