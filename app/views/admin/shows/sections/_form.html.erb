<div class="mt-2 grid grid-cols-2 gap-x-4">
  <%= section_fields.hidden_field :seating_chart_section_id %>

  <div>
    <%= text_field_tag :seating_chart_section_name, section_fields.object.seating_chart_section.name, class: "form-control-text mt-2", disabled: true %>
  </div>
  <div> 
    <div class="relative mt-2 rounded-md shadow-sm">
      <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
        <span class="text-gray-500 sm:text-sm">$</span>
      </div>
      
      <%= section_fields.number_field :ticket_price, class: "form-control-text pl-7 pr-12", min: "0", step: "0.01" %>
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
        <span class="text-gray-500 sm:text-sm" id="price-currency">USD</span>
      </div>
    </div>
  </div>
</div>