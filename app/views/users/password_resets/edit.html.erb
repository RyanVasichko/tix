<h2 class="my-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
  Change your password
</h2>

<%= card width: "max-w-md" do %>
  <%= form_with(model: @user, scope: "", url: user_password_reset_path, html: { class: "space-y-4" }) do |f| %>
    <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, disabled: true, class: "bg-gray-100" %>
    </div>

    <div>
      <%= f.label :password, "New password", class: "inline-block" %><em class="text-sm">(8 characters minimum)</em>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.submit "Reset my password", class: "mt-6" %>
    </div>
  <% end %>
<% end %>
