<h2 class="my-6 text-center text-3xl font-semibold">
  Sign Up
</h2>

<%= card width: "max-w-md" do %>
  <%= form_with(model: @user, scope: "user", url: users_path) do |f| %>
    <%= f.label :email, class: "mt-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.label :password, class: "mt-4" do %>
      Password <em class="text-xs">(8 characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>

    <%= f.label :password_confirmation, class: "mt-4" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <%= f.label :first_name, class: "mt-4" %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name, class: "mt-4" %>
    <%= f.text_field :last_name %>

    <%= f.label :phone, class: "mt-4" do %>
      Phone <span class="text-xs">(optional)</span>
    <% end %>
    <%= f.text_field :phone %>

    <%= f.submit "Sign up", class: "w-full mt-4" %>
  <% end %>
<% end %>
