<dialog data-controller="modal"
        data-turbo-temporary
        aria-labelledby="modal_title"
        class="rounded-lg bg-white p-4 pt-5 text-left shadow-xl sm:w-full <%= local_assigns[:width] || "max-w-lg" %>">
  <header class="flex items-center justify-between">
    <div class="w-8"></div>

    <h5 id="modal_title" class="flex-1 text-center text-lg">
      <%= title %>
    </h5>

    <form method="dialog" class="w-8">
      <button type="submit" class="rounded-md bg-white text-gray-400 hover:text-gray-500">
        <span class="sr-only">Close</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </form>
  </header>

  <div class="mt-3 sm:mt-5">
    <%= yield %>
  </div>
</dialog>
