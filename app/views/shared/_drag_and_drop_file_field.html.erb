<div
  data-controller="file-drop preview"
  data-action="dragover->file-drop#dragover dragleave->file-drop#dragleave drop->file-drop#drop"
  class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10"
>
  <div class="text-center">

    <% if form.object.send(attribute).attached? %>
      <%= image_tag form.object.send(attribute), class: "w-auto max-h-48 object-cover mx-auto rounded-lg", data: { preview_target: "output" } %>
    <% end %>
    <img id="image-preview" src="#" alt="Uploaded Image Preview" class="mx-auto hidden max-h-48 w-auto rounded-lg object-cover" data-preview-target="output">
    <svg class="<%= "hidden" if form.object.send(attribute).attached? %> mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" data-preview-target="placeholder">
      <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
    </svg>


    <div class="mt-4 flex justify-center text-sm leading-6 text-gray-600">
      <%= form.label attribute, class: "relative cursor-pointer rounded-md bg-white font-semibold text-amber-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-amber-600 focus-within:ring-offset-2 hover:text-amber-500", data: { image_preview_target: "input" } do %>
        <span>Upload a file</span>
        <%= form.file_field attribute, class: "sr-only", data: { file_drop_target: "input", action: "change->preview#preview" } %>
      <% end %>
      <p class="pl-1">or drag and drop</p>
      </label>
    </div>
  </div>
</div>
