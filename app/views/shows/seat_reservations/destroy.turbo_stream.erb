<%= turbo_stream_replace_shopping_cart_count %>

<%= turbo_stream.replace dom_id(@seat) do %>
  <%= render "shows/seats/seat", seat: @seat %>
<% end %>

<% if Current.user.has_reserved_seats_for_show?(@seat.show) %>
  <%= turbo_stream.remove "show_seat_#{@seat.id}_reservation" %>
<% else %>
  <%= turbo_stream.remove "show_#{@seat.show.id}_seat_reservations" %>
<% end %>