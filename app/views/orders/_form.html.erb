<%= turbo_frame_tag order do %>
  <div class="max-w-lg text-center">
    <%= render "shared/error_messages", { model: order } %>
  </div>

  <%= form_with(
    model: order,
    data:
    {
      controller: "checkout",
      action: "checkout#handlePaymentMethod",
      checkout_amount_value: order.total_in_cents,
      checkout_stripe_public_key_value: Rails.application.credentials.stripe.public_key
    },
    class: "lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16") do |form|
  %>
    <%= form.hidden_field :new_payment_method, data: { checkout_target: "newPaymentMethodField" } %>
    <%= form.hidden_field :order_total_in_cents %>
    <% order.tickets.each do |ticket| %>
      <%= form.hidden_field :seat_ids, multiple: true, value: ticket.seat.id %>
    <% end %>
      <!-- Order summary -->
    <div class="mt-10 lg:mt-0m lg:order-2">
      <h2 class="text-lg font-medium text-gray-900">Order summary</h2>

      <div class="mt-4 rounded-lg border border-gray-200 bg-white shadow-sm">
        <h3 class="sr-only">Items in your cart</h3>
        <ul role="list" class="divide-y divide-gray-200">
          <% order.tickets.group_by { |ticket| ticket.show }.each do |show, tickets| %>
            <li class="flex px-4 py-6 sm:px-6">
              <div class="flex-shrink-0">
                <%= link_to show do %>
                  <%= image_tag url_for(show.artist.image), class: "w-20 rounded-md" %>
                <% end %>
              </div>

              <div class="ml-6 flex flex-1 flex-col">
                <div class="flex">
                  <div class="min-w-0 flex-1">
                    <h4 class="text-sm">
                      <%= link_to show.artist.name, show, class: "font-medium text-gray-700 hover:text-gray-800" %>
                    </h4>
                    <% tickets.each do |ticket| %>
                      <div class="flex justify-between items-baseline">
                        <div>
                          <span class="mt-1 text-sm text-gray-500">Table <%= ticket.table_number %> Seat <%= ticket.seat_number %></span> - <span class="text-sm font-medium">$<%= ticket.price %></span>
                        </div>
                        <%= link_to order_seat_reservations_path(ticket.seat), data: { turbo_method: "DELETE" }, class: "flex items-center justify-center bg-white p-2.5 text-gray-400 hover:text-gray-500" do %>
                          <span class="sr-only">Remove</span>
                          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="flex flex-1 items-end justify-between pt-2">
                  <p class="mt-1 text-sm font-medium text-gray-900">
                    $<%= tickets.sum { |t| t.price } %>
                  </p>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <dl class="space-y-6 border-t border-gray-200 px-4 py-6 sm:px-6">
          <div class="flex items-center justify-between">
            <dt class="text-sm">Subtotal</dt>
            <dd class="text-sm font-medium text-gray-900">$<%= order.order_total %></dd>
          </div>
          <div class="flex items-center justify-between">
            <dt class="text-sm">Shipping</dt>
            <dd class="text-sm font-medium text-gray-900">TODO</dd>
          </div>
          <div class="flex items-center justify-between">
            <dt class="text-sm">Taxes</dt>
            <dd class="text-sm font-medium text-gray-900">TODO</dd>
          </div>
          <div class="flex items-center justify-between border-t border-gray-200 pt-6">
            <dt class="text-base font-medium">Total</dt>
            <dd class="text-base font-medium text-gray-900">$<%= order.order_total %></dd>
          </div>
        </dl>

        <div class="hidden border-t border-gray-200 px-4 py-6 sm:px-6 lg:block hover:pointer">
          <%= button_tag type: "submit", data: { checkout_target: "btnSubmit" }, class: "group flex items-center justify-center w-full rounded-md border border-transparent bg-indigo-600 px-4 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50" do %>
            <div class="hidden loader h-4 w-4 mr-1 group-disabled:block"></div>
            <span class="group-disabled:hidden">Place Order</span>
            <span class="hidden group-disabled:block">Placing Order...</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="lg:order-1 mt-10 border-t border-gray-200 lg:border-none pt-5 lg:pt-0">
      <% if order.collect_contact_information? %>
        <div>
          <h2 class="text-lg font-medium text-gray-900">Contact information</h2>

          <div class="mt-4 md:grid md:grid-cols-2 md:gap-4">
            <div class="mt-2 md:mt-0">
              <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :first_name, class: "form-control-text mt-1" %>
            </div>
            <div class="mt-2 md:mt-0">
              <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :last_name, class: "form-control-text mt-1" %>
            </div>
            <div class="mt-2 md:mt-0">
              <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
              <%= form.telephone_field :phone_number, class: "form-control-text mt-1" %>
            </div>
            <div class="mt-2 md:mt-0">
              <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email, class: "form-control-text mt-1" %>
            </div>
          </div>
        </div>
      <% end %>

