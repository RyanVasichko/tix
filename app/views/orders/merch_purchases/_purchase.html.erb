<div class="my-2">
  <% if purchase.options.present? %>
    <div class="text-gray-500">
      <%= purchase.options["name"] %>: <%= purchase.options["value"] %>
    </div>
  <% end %>
  <div>
    <span class="text-gray-500">Quantity: <%= purchase.quantity %> -</span>
    <span class="font-medium"><%= number_to_currency(purchase.balance_paid) %></span>
  </div>
</div>
