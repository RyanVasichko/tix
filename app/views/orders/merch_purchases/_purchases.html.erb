<% purchases.group_by(&:purchaseable).each do |merch, merch_purchases| %>
  <li class="flex px-4 py-6 sm:px-6">
    <div class="p-4">
      <div class="grid grid-cols-1 text-sm sm:grid-cols-4 sm:gap-x-6 md:grid-cols-6 md:gap-x-8">
        <div class="col-span-4 sm:col-span-1 md:col-span-2">
          <%= image_tag url_for(merch.image.variant(:small)), class: "h-36 w-auto rounded-lg" %>
        </div>
        <div class="col-span-4 mt-6 sm:col-span-3 sm:mt-0 md:col-span-4">
          <h3 class="text-lg font-medium text-gray-900">
            <span class="text-2xl"><%= merch.name %></span>
          </h3>
          <%= render partial: "orders/merch_purchases/purchase", collection: merch_purchases %>
          <p class="mt-1 font-medium text-gray-900"><%= number_to_currency(merch_purchases.sum(&:balance_paid)) %></p>
        </div>
      </div>
    </div>
  </li>
<% end %>
