{
  "plugins": ["@prettier/plugin-ruby", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.rb", "*.rake"],
      "options": {
        "printWidth": 120,
        "bracketSameLine": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 120,
        "trailingComma": "none"
      }
    }
  ]
}